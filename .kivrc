## .kivrc - Set custom defaults for kvm-install-vm

# Autostart
export AUTOSTART=true

# Number of virtual CPUs
#export CPUS=1

# Use host cpu features to the guest
#export FEATURE=host

# Amount of RAM in MB
#export MEMORY=1024

# Disk Size in GB
#export DISK_SIZE=10

# DNS domain
#export DNSDOMAIN=example.local

# Graphics type
export GRAPHICS=vnc

# Console port
#export PORT=-1

# Resize disk (boolean)
#export RESIZE_DISK=false

# Directory to store images
export IMAGEDIR=/var/lib/libvirt/images

# Hypervisor bridge
export BRIDGE=br0

# SSH public key
#export PUBKEY=${HOME}/.ssh/id_rsa.pub

# Distribution
#export DISTRO=centos7

# MAC Address
#export MACADDRESS=

# Timezone
export TIMEZONE=Europe/Dublin

# User
#export ADDITIONAL_USER=${USER}

# Verbosity
export VERBOSE=0
